@page
@model WEDNESDAY1.Pages.RESTAURANT.ViewrazorpageModel
@{

    var path = "~/image/" + Model.ee.path;
}
<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.ee.name</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="@path" asp-append-version="true" />

                <h4>Restaurant ID : @Model.ee.id</h4>
                <h4>Email : @Model.ee.email</h4>
                <h4>Rooms Available : @Model.ee.rooms</h4>
                

            </div>
            <div class="card-footer text-center">
                <a asp-page="/RESTAURANT/index"
                   class="btn btn-primary">Back</a>
                <a href="#" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>